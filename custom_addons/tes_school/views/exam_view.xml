<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="exam_view_form" model="ir.ui.view">
        <field name="name">exam.view.form</field>
        <field name="model">exam.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>                          
                            <field name="teacher_id" widget="many2one" domain="[('role','=','teacher')]"/>
                        </group>
                        <group>                        
                            <field name="subject_id" />                          
                        </group>
                    </group>
                    <notebook>
                        <page string="Student List" name="Student">
                            <field name="student_ids">
                                <tree>
                                    <field name="student_id" domain="[('role','=','student')]"/>
                                    <field name="subject_name"/>
                                    <field name="score"/>
                                    <field name="status" />
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="student_id" />
                                        </group>
                                        <group>
                                            <field name="score"/>
                                        </group>
                                        <group>
                                            <field name="status" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_action" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">exam.model</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
     <menuitem
            id="exam_menu"
            name="Exam"
            action="exam_action"
            parent="school_pj_root_menu"
            sequence="10"/>


</odoo>
