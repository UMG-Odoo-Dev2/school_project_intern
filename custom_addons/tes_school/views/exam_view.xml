<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="exam_view_tree" model="ir.ui.view">
        <field name="name">exam.view.tree</field>
        <field name="model">exam.model</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="teacher_id" />
                <field name="subject_id" />
                <field name="school_exam_line" />
            </tree>
        </field>
   </record>
    <record id="exam_view_form" model="ir.ui.view">
        <field name="name">exam.view.form</field>
        <field name="model">exam.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>                          
                            <field name="teacher_id" domain="[('role','=','teacher'),('state','=','current')]"/>
                        </group>
                        <group>                        
                            <field name="subject_id"/>                          
                        </group>
                    </group>
                    <notebook>
                        <page string="Student Info:">
                            <field name="school_exam_line">
                                <tree editable="bottom">
                                    <field name="student_id" domain="[('role','=','student'),('state','=','current')]"/>
                                    <field name="score" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_action" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">exam.model</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
     <menuitem
            id="exam_menu"
            name="Exam"
            action="exam_action"
            parent="school_pj_root_menu"
            sequence="10"/>


</odoo>
