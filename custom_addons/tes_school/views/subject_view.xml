<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subject_view_tree" model="ir.ui.view">
        <field name="name">subject.view.tree</field>
        <field name="model">subject.model</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="subjects" />
                <field name="teacher_id" />
            </tree>
        </field>
    </record>
    <record id="subject_view_form" model="ir.ui.view">
        <field name="name">subject.view.form</field>
        <field name="model">subject.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="subjects" required="True"/>
                        </group>
                        <group>
                            <field name="teacher_id" required="True" domain="[('role','=','teacher'),('state','=','current')]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="subject_action" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="res_model">subject.model</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
    <menuitem
            id="subject_menu"
            name="Subject"
            action="subject_action"
            parent="school_pj_root_menu"
            sequence="10"/>

</odoo>
