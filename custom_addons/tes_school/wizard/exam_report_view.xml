<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="exam_report_view_form" model="ir.ui.view">
        <field name="name">exam.report.view.form</field>
        <field name="model">exam.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="student_id" domain="[('role','=','student'),('state','=','current')]"/>
                    </group>
                    <footer>
                        <button name="action_print_report" type="object" string="Print" class="btn_primary"/>
                        <button string="Cancel" class="btn_secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Exam Report</field>
        <field name="res_model">exam.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html"> -->
            
        <!-- </field> -->
    </record>>
    <menuitem
        id="exam_report_menu"
        name="Exam Report"
        action="exam_report_wizard_action"
        parent="school_pj_root_menu"
        sequence="10"/>

</odoo>
