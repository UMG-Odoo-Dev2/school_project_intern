<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_exam_view_form" model="ir.ui.view">
        <field name="name">school_exam.view.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="teacher_id" domain ="[('role', '=', 'teacher'),('state', '=', 'presence')]" />
                        <field name="subject_id" />
                    </group>
                    <notebook>
                        <page string="Student List" name="student">
                            <field name="exam_line_ids">
                                <tree editable="bottom">
                                    <field name="student_id" domain ="[('role', '=', 'student'),('state', '=', 'presence')]"/>
                                    <field name="score"/>
                                    <field name="status"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="student_id"/>
                                        </group>
                                        <group>
                                            <field name="score"/>
                                        </group>
                                        <group>
                                            <field name="status"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="school_exam_view_tree" model="ir.ui.view">
        <field name="name">school_exam.view.tree</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="teacher_id" />
                <field name="subject_id"/>
                <field name="exam_line_ids"/>
            </tree>
        </field>
    </record>


    <record id="school_exam_action" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">school.exam</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
    <menuitem
        id="school_exam_menu"
        name="Exam"
        action="school_exam_action"
        parent="school_project_root_menu"
        sequence="10"/>

</odoo>
