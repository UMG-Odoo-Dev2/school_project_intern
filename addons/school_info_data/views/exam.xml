<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="exam_info_action" model="ir.actions.act_window">
        <field name="name">Exam List</field>
        <field name="res_model">exam.info</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="exam_info_sub_menu"
        name="Exam"
        action="exam_info_action"
        parent="teachers_students_root_menu"
        sequence="10"/>

    <record id="exam_info_view_form" model="ir.ui.view">
        <field name="name">exam_info.view.form</field>
        <field name="model">exam.info</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="months" />
                        <field name="duration" />
                        <field name="teacher_id" domain = "[('state', '=', 'teacher')]"/>
                        <field name="student_id" widget = "many2many_tags" domain = "[('state', '=', 'student')]"/>
                        <field name="exam_date_start" />
                        <field name="exam_date_end" />
                        <field name="subject_ids" widget = "many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_info_view_tree" model="ir.ui.view">
        <field name="name">exam_info.view.tree</field>
        <field name="model">exam.info</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" optional = "show"/>
                <field name="months" optional = "show"/>
                <field name="duration" optional = "show" />
                <field name="teacher_id" optional = "show"/>
                <field name="student_id" optional = "show"/>
                <field name="exam_date_start" optional = "show"/>
                <field name="exam_date_end" optional = "show"/>
            </tree>
        </field>
    </record>

</odoo>
