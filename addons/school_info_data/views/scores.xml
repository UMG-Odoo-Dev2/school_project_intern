<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_scores_action" model="ir.actions.act_window">
        <field name="name">List of Student Scroes</field>
        <field name="res_model">exam.scores</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>
    <menuitem
        id="exam_scores_sub_menu"
        name="Scores"
        action="exam_scores_action"
        parent="teachers_students_root_menu"
        sequence="10"/>
    <record id="exam_scores_view_form" model="ir.ui.view">
        <field name="name">exam_scores.view.form</field>
        <field name="model">exam.scores</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="student_ids" domain = "[('state', '=', 'student')]"/>
                        <field name="exam_ids"/>
                        <field name="teacher_id"/>
                    </group>
                    <notebook>
                        <page string="Subject List" name="Subjects">
                            <field name="subject_ids">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="score"/>
                                    <field name="status"/>
                                    <field name="exam_id" invisible = 'True'/>
                                    <field name="total_score"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_scores_view_tree" model="ir.ui.view">
        <field name="name">exam_scores.view.tree</field>
        <field name="model">exam.scores</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="student_ids" />
                <field name="exam_ids" />
            </tree>
        </field>
    </record>


    <record id="exam_scores_view_search" model="ir.ui.view">
        <field name="name">exam_scores.view.search</field>
        <field name="model">exam.scores</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="student_ids" filter_domain="['|', '|', ('student_ids','ilike',self), ('exam_ids','ilike',self), ('teacher_id','ilike',self)]" string="Search"/>
                <field name="exam_ids" />
                <field name="teacher_id" />
                <searchpanel>
                    <field name="student_ids" />
                </searchpanel>
            </search>
        </field>
    </record>
    
</odoo>
