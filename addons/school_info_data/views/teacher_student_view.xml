<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="teachers_students_action" model="ir.actions.act_window">
        <field name="name">List of Name</field>
        <field name="res_model">teachers.students</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="teachers_students_root_menu"
        name="School"
        sequence="10"/>
        <menuitem
            id="teachers_students_sub_menu"
            name="Info"
            action="teachers_students_action"
            parent="teachers_students_root_menu"
            sequence="10"/>

    <record id="teachers_students_view_form" model="ir.ui.view">
        <field name="name">teachers_students.view.form</field>
        <field name="model">teachers.students</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="student,teacher"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required = "True"/>
                            <field name="father_name" required = "True"/>
                        </group>
                        <group>
                            <field name="date_of_birth" required = "True"/>
                            <field name="role" required = "True"/>
                        </group>
                        <group>
                            <field name="gender" required = "True"/>
                            <field name="attendance" required = "True"/>
                            <field name="degree" />
                            <field name="phone" />
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="teachers_students_view_tree" model="ir.ui.view">
        <field name="name">teachers_students.view.tree</field>
        <field name="model">teachers.students</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" optional = "show"/>
                <field name="father_name" optional = "show"/>
                <field name="date_of_birth" optional = "show"/>
                <field name="role" optional = "show"/>
                <field name="gender" optional = "show"/>
                <field name="attendance" optional = "show"/>
                <field name="degree" optional = "show"/>
                <field name="phone" optional = "show"/>
                <field name="description" optional = "show"/>
                <field name="state" optional = "show"/>
            </tree>
        </field>
    </record>

</odoo>
