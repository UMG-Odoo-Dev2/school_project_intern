<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="exam_report" model="ir.actions.report">
        <field name="name">Exam Report</field>
        <field name="model">exam.scores</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_info_data.report_exam</field>
        <field name="report_file">school_info_data.report_exam</field>
        <field name="binding_model_id" ref="model_exam_scores"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_exam">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <center>
                    <h1>Exam Report</h1>
                </center>
            </t>
        </t>
    </template>

</odoo>
