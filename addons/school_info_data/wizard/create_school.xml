<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_school_view_form" model="ir.ui.view">
        <field name="name">create_school.view.form</field>
        <field name="model">create.school.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="subjects" />
                </group>
                <footer>
                    <button string="Print" name="do_action" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="create_school_action" model="ir.actions.act_window">
        <field name="name">Filter Scores</field>
        <field name="res_model">create.school.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="create_school_menu"
        name="Filter By"
        action="create_school_action"
        parent="teachers_students_root_menu"
        sequence="10"/>

</odoo>
