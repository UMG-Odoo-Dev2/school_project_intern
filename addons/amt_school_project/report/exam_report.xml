<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_exam" model="ir.actions.report">
        <field name="name">Exam Report</field>
        <field name="model">school.exam.model</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">amt_school_project.report_exam</field>
        <field name="report_file">amt_school_project.report_exam</field>
        <!-- <field name="print_report_name">'%s' % object.name</field> -->
        <field name="binding_model_id" ref="model_school_exam_model"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_exam">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <center>
                    <h1>Exam Report</h1>
                </center>
                <!-- <t t-call="web.external_layout">
                    <div class="page">
                        
                    </div>
                </t> -->
            </t>
        </t>
    </template>

</odoo>
