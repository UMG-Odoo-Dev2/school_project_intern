<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_view_tree" model="ir.ui.view">
        <field name="name">school.view.tree</field>
        <field name="model">leoschool.project.model</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" optional="show" />
                <field name="father_name" optional="show" />
                <field name="roll_no" optional="show"/>
                <field name="state" optional="show" />
                <field name="dob" optional="show" />
                <field name="role" optional="show" />
                <field name="phone_no" optional="hide"/>
                <field name="address" optional="show" />
            </tree>
        </field>
    </record>
    <record id="school_view_form" model="ir.ui.view">
        <field name="name">school.view.form</field>
        <field name="model">leoschool.project.model</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="old,new,current"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar" />
                            <field name="name" />                        
                            <field name="father_name" />                        
                            <field name="roll_no"/>
                            <!-- <field name="state"/>  -->
                        </group>
                        <group>
                            <field name="dob" />                        
                            <field name="address" />                        
                            <field name="phone_no"/> 
                            <field name="role"/> 
                        </group>                     
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="leo_school_action" model="ir.actions.act_window">
        <field name="name">School Table</field>
        <field name="res_model">leoschool.project.model</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="school_root_menu"
        name="School Panel"
        sequence="10"/>
        <menuitem
            id="school_sub_menu"
            name="Campus"
            action="leo_school_action"
            parent="school_root_menu"
            sequence="10"/>

</odoo>
