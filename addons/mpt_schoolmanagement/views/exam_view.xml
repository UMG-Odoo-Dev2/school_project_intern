<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_view_form" model="ir.ui.view">
        <field name="name">exam.view.form</field>
        <field name="model">exam.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="teacher_id" domain="[('role','=','teacher'),('state','=','current')]"/>
                        </group>
                        <group>
                            <field name="subject_id"/>   
                        </group>
                    </group>
                        <notebook>
                            <page string="Student List" name="Student" >
                                <field name="stu_ids">
                                    <tree editable= "bottom">
                                        <field name="stu_id" domain="[('role','=','student'),('state','=','current')]"/>
                                        <!-- <field name="subject_name"/> -->
                                        <field name="score"/>
                                        <field name="status"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="stu_id" domain="[('role','=','student'),('state','=','current')]"/>
                                            </group>
                                            <!-- <group>
                                                <field name="name"/>
                                            </group> -->
                                            <group>
                                                <field name="score"/>   
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="exam_view_tree" model="ir.ui.view">
        <field name="name">exam.view.tree</field>
        <field name="model">exam.model</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="teacher_id" string="Teacher"/>
                <field name="subject_id" string="Subject"/>
                <field name="stu_ids" string="Student"/>
                <field name="score" string="Score"/>
            </tree>
        </field>
    </record>

    <record id="exam_action" model="ir.actions.act_window">
        <field name="name">Exam Panel</field>
        <field name="res_model">exam.model</field>
        <field name="view_mode">tree,form</field>
    <!-- <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        
    </field>  -->
    </record>
    

</odoo>
