<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <!--school action-->
   <record id="school_appointment_action" model="ir.actions.act_window">
      <field name="name">School Appointment</field>
      <field name="res_model">appointment.model</field>
      <field name="context" />
      <!--default context-->
      <field name="view_mode">tree,form</field>
   </record>
   <record id="school_appointment_form" model="ir.ui.view">
      <field name="name">school_appointment.view.form</field>
      <field name="model">appointment.model</field>
      <field name="arch" type="xml">
         <form string="">
            <sheet>
            <!--priority widget-->
            <div class="oe_title">
            <h1>
            <field name="priority" widget="priority" class="mr-3" />
            </h1>
            </div>
                <group>
                    <group>
                        
                            <field name="subject_id" />
                    </group>
                    <group>
                            
                            <field name="teacher" />
                            <!-- <field name="teacher_id" domain="[('role','=','teacher'),('status','=','current')]" /> -->

                    </group>
                    <group>
                    <!--notebook-->
                        <notebook>
                            <page name="examm_student" string="Exam Student">
                            <field name="name_id" domain="[('role','=','student'),('status','=','current')]"/></page>
                            <page name="score" string="Student Score">
                            <field name="score" />
                                
                            </page>
                        </notebook>
                    </group>
                    
                    
                </group>
            </sheet>
         </form>
      </field>
   </record>
   <record id="school_appointment_tree" model="ir.ui.view">
      <field name="name">school_appointment.view.tree</field>
      <field name="model">appointment.model</field>
      <field name="arch" type="xml">
         <tree string="">
            
            <field name="subject_id" />
            <field name="teacher" />
            <field name="name_id" />
            <field name="score" /> 
         </tree>
      </field>
   </record>
</odoo>
